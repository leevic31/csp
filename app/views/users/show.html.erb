<h1>Files for <%= @user.email %></h1>

<% @folders.each do |folder| %>
  <h2><%= folder.name %></h2>
  <ul>
    <% folder.file_uploads.each do |file_upload| %>
      <li>
        <%= file_upload.name %>
        <%= link_to "Download", download_folder_file_upload_path(file_upload.folder, file_upload) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to "Back to Users", users_path %>
